<% include partials/header %>

<title>Namepuns.net</title>
</head>

<% include partials/navbar %>


<div class="container extraMarginTopBottom50">

    <h2 class="extraMarginTopBottom20">Edit <%= pun.name %> Pun</h2>

    <form action="/puns/<%= pun._id %>?_method=PUT" method="POST">
        <div class="form-group input-group-lg">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="usernameInput" name="name" value="<%= pun.name %>" required>
        </div>
        <div class="form-group input-group-lg">
                <label for="description">Pun</label>
                <input type="text" class="form-control" id="passwordInput" name="description" value="<%= pun.description %>" required>
        </div>
        <button type="submit" class="btn btn-primary btn-lg extraPaddingRightLeft70 extraMarginTopBottom20">Submit</button>
    </form>

</div>




<% include partials/footer %>