<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">    
            <img src="https://amazonfashionweektokyo.com/en/wp-content/uploads/2016/01/Name_logo.jpg" height="35" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            
                <li class="nav-item active">
                <a class="nav-link" href="/">Namepuns.net<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/puns/new">Add New Pun</a>
                </li>
            </ul>
            <form id="navbarSearchForm" class="form-inline">
                <input id="searchNavInput" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <a id="searchNavButton" class="btn btn-outline-success my-2 my-sm-0" href="/puns">Search</a>
            </form>
            <ul class="navbar-right navbar-nav">
                <% if (!currentUser) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Sign up</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                            <a href="/profile/<%= currentUser.username %>" class="nav-link">Signed In As <b><%= currentUser.username %></b></a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                    </li>
                <% } %>
            </ul>

        </div>
    </nav>

    <script>
        
        document.getElementById("searchNavButton").onclick = function() {
            let nameSearched = document.getElementById("searchNavInput").value;
            if (nameSearched) {
                document.getElementById("searchNavButton").setAttribute("href", "/puns/name/" + nameSearched);
            }
        }
        
    </script>
    
    <div class="container">
        
        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if(success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        
        </div>
        <% } %>
        
    </div>